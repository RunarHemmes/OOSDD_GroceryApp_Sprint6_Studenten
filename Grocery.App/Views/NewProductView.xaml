<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">

    <!--ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding Client.Name}" Command="{Binding ShowBoughtProductsCommand}"/>
    </ContentPage.ToolbarItems-->

    <Shell.TitleView>
        <Grid>
            <Label Text="Nieuw product" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Border Stroke="#C49B33"
            StrokeThickness="4"
            Padding="10"
            Margin="10"
            HorizontalOptions="Center">
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Productnaam" Text="{Binding NewName}" />
            <Entry Placeholder="Voorraad" Text="{Binding NewStock}" />
            <Entry Placeholder="Jaar" Text="{Binding NewShelfLifeYear}" />
            <Entry Placeholder="Maand" Text="{Binding NewShelfLifeMonth}" />
            <Entry Placeholder="Dag" Text="{Binding NewShelfLifeDay}" />
            <Entry Placeholder="Prijs" Text="{Binding NewPrice}" />
            <Button Text="Maak product" Command="{Binding CreateProductCommand}" />
            <Label Text="{Binding Message}" TextColor="Red" />
        </StackLayout>
    </Border>
</ContentPage>
